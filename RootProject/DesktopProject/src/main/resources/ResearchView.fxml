<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="750.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.crisi.linkresearcher.controller.ResearchViewController">
   <children>
      <GridPane prefHeight="198.0" prefWidth="800.0" VBox.vgrow="ALWAYS">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="393.0" minWidth="10.0" prefWidth="248.0" />
          <ColumnConstraints hgrow="ALWAYS" maxWidth="552.0" minWidth="10.0" prefWidth="511.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="552.0" minWidth="10.0" prefWidth="62.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="75.0" minHeight="10.0" prefHeight="61.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="35.0" minHeight="0.0" prefHeight="10.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="70.0" minHeight="10.0" prefHeight="38.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="70.0" minHeight="10.0" prefHeight="15.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="47.0" minHeight="0.0" prefHeight="40.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
               <children>
                  <Label fx:id="nameLabel" text="Name" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="37.0" prefWidth="227.0" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
               <children>
                  <Label fx:id="descriptionLabel" text="Description" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" />
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.valignment="CENTER" GridPane.vgrow="SOMETIMES">
               <children>
                  <TextField fx:id="nameField" prefHeight="31.0" prefWidth="375.0" />
               </children>
            </HBox>
            <HBox alignment="BOTTOM_LEFT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
               <children>
                  <TextArea fx:id="descriptionField" prefHeight="42.0" prefWidth="374.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleAddResearchButton" text="Add research" />
                  <Button mnemonicParsing="false" onAction="#handleSearchByExactButton" text="Search by exact" />
                  <Button mnemonicParsing="false" onAction="#handleSearchBySomeButton" text="Search by some" />
                  <Button mnemonicParsing="false" onAction="#handleSeeAllButton" text="See all" />
               </children>
            </HBox>
         </children>
      </GridPane>
      <TableView fx:id="researchTableView" prefHeight="504.0" prefWidth="800.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="idResearchColumn" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="nameResearchColumn" prefWidth="75.0" text="Name" />
            <TableColumn fx:id="descriptionResearchColumn" prefWidth="75.0" text="Description" />
            <TableColumn fx:id="searchesColumn" prefWidth="75.0" text="Searches" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox alignment="CENTER" prefHeight="88.0" prefWidth="800.0" spacing="20.0" VBox.vgrow="ALWAYS">
         <children>
            <Button mnemonicParsing="false" onAction="#handleRemoveButton" text="Remove" />
            <Button mnemonicParsing="false" onAction="#handleUpdateButton" text="Update" />
            <Button mnemonicParsing="false" onAction="#handleSelectButton" text="Select" />
         </children>
      </HBox>
   </children>
</VBox>
